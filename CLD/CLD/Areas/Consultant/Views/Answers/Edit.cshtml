@model CLD.Models.Answer

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Consultant/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Answer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
